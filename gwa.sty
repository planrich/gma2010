\makeatletter

\makeatletter

\def\@maketitle{%
  \newpage
  \null
  \vskip 4em%
  \begin{center}%
  \let \footnote \thanks
    {\vskip -6em \LARGE \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
    {\normalsize \@date}%
  \end{center}%
  \par
  \vskip 1em
}

